    "inspector",
    "css-debug",
    "design-mode",
    "ruler",
    "seo-analyzer",
    "console",
    "draw-tools",
    "typescript",
    "tailwindcss"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brenopolanski/dev-box.git"
  },
  "homepage": "https://github.com/brenopolanski/dev-box#readme",
